

<MudStack AlignItems="AlignItems.Center">
    <MudText Class="mb-3" Typo="Typo.h5"><b>@(Entries[(selected - 1)].Name)</b></MudText>
    <MudPagination Class="mb-3" Color="Color.Primary" Count="@Entries.Count" SelectedChanged="SelectedChanged" />
    <EntryMetadata Entry="@(Entries[(selected - 1)])" />
</MudStack>

@code {
    [Parameter]
    public List<CVEntry> Entries { get; set; } = [];

    private int selected = 1;

    private void SelectedChanged(int page)
    {
        selected = page;
        StateHasChanged();
    }
}
